{
    "name": "spatie/flare-debug-sender",
    "description": "Debugging tool for Flare payloads",
    "keywords": [
        "spatie",
        "flare-debug-sender"
    ],
    "homepage": "https://github.com/spatie/flare-debug-sender",
    "license": "MIT",
    "authors": [
        {
            "name": "Ruben Van Assche",
            "email": "ruben@spatie.be",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.4",
        "spatie/flare-client-php" : "^2.0",
        "spatie/ray" : "^1.0"
    },
    "require-dev": {
        "pestphp/pest": "^3.0",
        "friendsofphp/php-cs-fixer": "^3.21.1",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "Spatie\\FlareDebugSender\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Spatie\\FlareDebugSender\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
            "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.dist.php --allow-risky=yes"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
